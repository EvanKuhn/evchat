#!/usr/bin/env python

import os
import sys
sys.path.insert(0, os.path.abspath('__file__/..'))
import evchat

# Make sure we have all the necessary config data
conf = evchat.core.Config()
conf.load()
if not conf.has_required_data():
    conf.prompt_user()
    conf.save()

# Run the app
app = evchat.core.ChatApp(conf)
app.start()
app.stop()
